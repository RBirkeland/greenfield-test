{
  "name": "greenfield-test-kanban",
  "version": "0.1.0",
  "description": "Kanban TODO board with WIP limits - minimal vanilla JS application",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "test": "vitest run --config .config/vitest.config.js",
    "test:watch": "vitest --config .config/vitest.config.js",
    "test:e2e": "playwright test --config .config/playwright.config.js",
    "dev": "npx http-server src/ -p 8080 -o",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint src/ tests/ --max-warnings 0",
    "lint:fix": "eslint src/ tests/ --fix"
  },
  "keywords": [
    "kanban",
    "todo",
    "wip-limits",
    "productivity"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@vitest/ui": "^3.1.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.1.0",
    "jsdom": "^27.0.1",
    "prettier": "^3.4.2",
    "vitest": "^3.1.1"
  },
  "dependencies": {
    "uuid": "^10.0.0",
    "vibe-kanban-web-companion": "^1.0.0"
  }
}
